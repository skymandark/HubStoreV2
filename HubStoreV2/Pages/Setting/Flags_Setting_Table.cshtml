@page
@model HubStoreV2.Pages.Setting.ERPSystemSettingsModel

@{
    ViewData["Title"] = "إعدادات النظام";
}

<form method="post">
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            <!-- Header Section -->
            <div class="hero-section mb-5">
                <div class="hero-gradient">
                    <div class="hero-content">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="hero-text">
                                <h1 class="display-4 fw-bold text-white mb-2">
                                    <i class="fas fa-cogs me-3"></i>
                                    إعدادات HubStore ERP
                                </h1>
                                <p class="lead text-white-50 mb-0">
                                    <i class="fas fa-star me-2"></i>
                                    تخصيص النظام وفقاً لاحتياجات عملك
                                </p>
                            </div>
                            <div class="hero-icon">
                                <div class="icon-circle">
                                    <i class="fas fa-building text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Settings Card -->
            <div class="main-card">

                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-12">
                            <div class="page-header mb-4">
                                <h3 class="mb-3">
                                    <i class="fas fa-sliders-h text-primary me-2"></i>
                                    إعدادات النظام الأساسية
                                </h3>
                                <p class="text-muted mb-0">قم بتخصيص إعدادات النظام لتناسب طريقة عمل شركتك</p>
                            </div>

                            <!-- معلومات الشركة -->
                            <div class="setting-section mb-4">
                                <h6 class="section-title">
                                    <i class="fas fa-info-circle text-info me-2"></i>
                                    معلومات الشركة
                                </h6>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">اسم الشركة</label>
                                        <input type="text" class="form-control" value="@Model.SystemSettings.CompanyName" readonly />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">العملة الافتراضية</label>
                                        <input type="text" class="form-control" value="@Model.SystemSettings.DefaultCurrency" readonly />
                                    </div>
                                </div>
                            </div>

                            <!-- إعدادات العمليات -->
                            <div class="setting-section mb-4">
                                <h6 class="section-title">
                                    <i class="fas fa-cogs text-warning me-2"></i>
                                    إعدادات العمليات
                                </h6>

                                <!-- نظام الموافقات -->
                                <div class="setting-item mb-3 p-3 border rounded">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="setting-info">
                                            <h6 class="mb-1">
                                                <i class="fas fa-shield-alt text-warning me-2"></i>
                                                نظام الموافقات
                                            </h6>
                                            <p class="text-muted small mb-0">
                                                تفعيل نظام الموافقات على المستندات (طلبات شراء، أوامر تحويل، إرجاعات)
                                            </p>
                                        </div>
                                        <div class="setting-control">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox"
                                                       name="SystemSettings.UseApprovalSystem"
                                                       id="approvalSystemSwitch"
                                                       onchange="updateApprovalSystem(this.checked)"
                                                       @(Model.SystemSettings.UseApprovalSystem ? "checked" : "") />
                                                <label class="form-check-label fw-bold" for="approvalSystemSwitch">
                                                    <span id="approvalStatus">@(Model.SystemSettings.UseApprovalSystem ? "مفعل" : "معطل")</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- إعدادات النظام -->
                            <div class="setting-section mb-4">
                                <h6 class="section-title">
                                    <i class="fas fa-sliders-h text-success me-2"></i>
                                    إعدادات النظام
                                </h6>

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="setting-item p-3 border rounded">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="mb-1">
                                                        <i class="fas fa-bell text-info me-2"></i>
                                                        الإخطارات
                                                    </h6>
                                                    <small class="text-muted">تفعيل إشعارات النظام</small>
                                                </div>
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox"
                                                           name="SystemSettings.EnableNotifications"
                                                           @(Model.SystemSettings.EnableNotifications ? "checked" : "") />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="setting-item p-3 border rounded">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="mb-1">
                                                        <i class="fas fa-save text-primary me-2"></i>
                                                        النسخ الاحتياطي التلقائي
                                                    </h6>
                                                    <small class="text-muted">نسخ احتياطي تلقائي للبيانات</small>
                                                </div>
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox"
                                                           name="SystemSettings.AutoBackupEnabled"
                                                           @(Model.SystemSettings.AutoBackupEnabled ? "checked" : "") />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- معلومات إضافية -->
                            <div class="info-banner">
                                <div class="banner-content">
                                    <i class="fas fa-lightbulb text-warning me-2"></i>
                                    <div>
                                        <strong>نصيحة مهمة:</strong> تغيير إعداد نظام الموافقات سيؤثر على جميع المستندات الجديدة في النظام.
                                        المستندات الموجودة مسبقاً تحتفظ بحالتها الحالية.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
</div>
</div>

<div class="card-footer bg-light">
<div class="row">
<div class="col-md-6">
    <div class="d-flex align-items-center">
        <i class="fas fa-info-circle text-info me-2"></i>
        <small class="text-muted">
            التغييرات تُطبق فور حفظها على النظام
        </small>
    </div>
</div>
<div class="col-md-6 text-end">
    <button type="button" class="btn btn-outline-secondary btn-sm me-2" onclick="resetSettings()">
        <i class="fas fa-undo me-1"></i>
        إعادة تعيين
    </button>
    <button type="button" class="btn btn-success btn-sm" onclick="saveSettings()">
        <i class="fas fa-save me-1"></i>
        حفظ الإعدادات
    </button>
</div>
</div>
</div>
</form>
</div>
</div>
</div>
</div>

<style>
    /* Hero Section Styling */
    .hero-section {
        position: relative;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }

    .hero-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
        padding: 60px 40px;
        position: relative;
        overflow: hidden;
    }

    .hero-gradient::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="hero-pattern" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23hero-pattern)"/></svg>');
        opacity: 0.3;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .hero-icon {
        animation: float 3s ease-in-out infinite;
    }

    .icon-circle {
        width: 80px;
        height: 80px;
        background: rgba(255,255,255,0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255,255,255,0.3);
        box-shadow: 0 8px 32px rgba(0,0,0,0.2);
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }

    /* Main Card Styling */
    .main-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        border: none;
        overflow: hidden;
        position: relative;
    }

    .main-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #667eea, #764ba2, #f093fb);
    }

    /* Setting Sections */
    .setting-section {
        background: linear-gradient(135deg, #f8f9ff 0%, #e8f2ff 100%);
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 25px;
        border: 1px solid rgba(102, 126, 234, 0.1);
        position: relative;
        overflow: hidden;
    }

    .setting-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: linear-gradient(180deg, #667eea, #764ba2);
        border-radius: 2px;
    }

    .section-title {
        color: #2c3e50;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 2px solid rgba(102, 126, 234, 0.2);
        font-weight: 600;
        position: relative;
    }

    /* Setting Items */
    .setting-item {
        background: white;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 15px;
        border: 1px solid rgba(0,0,0,0.05);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .setting-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.05), transparent);
        transition: left 0.6s ease;
    }

    .setting-item:hover::before {
        left: 100%;
    }

    .setting-item:hover {
        transform: translateY(-3px) scale(1.01);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.15);
        border-color: rgba(102, 126, 234, 0.2);
    }

    /* Form Controls */
    .form-control {
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 12px 16px;
        transition: all 0.3s ease;
        background: rgba(255,255,255,0.8);
        backdrop-filter: blur(10px);
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
        background: white;
    }

    .form-control[readonly] {
        background: #f8f9fa;
        border-color: #dee2e6;
    }

    /* Switches */
    .form-check-input {
        width: 50px;
        height: 24px;
        border-radius: 12px;
        background: #ccc;
        transition: all 0.3s ease;
    }

    .form-check-input:checked {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-color: #667eea;
    }

    .form-check-input:focus {
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.3);
    }

    /* Info Banner */
    .info-banner {
        background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
        border-radius: 15px;
        padding: 20px;
        border: 1px solid rgba(102, 126, 234, 0.1);
        margin-top: 20px;
    }

    .banner-content {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .banner-content i {
        font-size: 1.5rem;
        color: #667eea;
    }

    /* Action Footer */
    .action-footer {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 25px;
        border-top: 1px solid rgba(0,0,0,0.05);
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .btn-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

    .btn-gradient-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        color: white;
    }

    .btn-outline-primary {
        border: 2px solid #667eea;
        color: #667eea;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-outline-primary:hover {
        background: #667eea;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-gradient {
            padding: 40px 20px;
        }

        .hero-text h1 {
            font-size: 2rem;
        }

        .icon-circle {
            width: 60px;
            height: 60px;
            font-size: 1.5rem;
        }

        .setting-section {
            padding: 20px;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-gradient-primary,
        .btn-outline-primary {
            width: 100%;
        }
    }

    /* Animations */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .setting-section {
        animation: fadeInUp 0.6s ease-out;
    }

    .setting-section:nth-child(1) { animation-delay: 0.1s; }
    .setting-section:nth-child(2) { animation-delay: 0.2s; }
    .setting-section:nth-child(3) { animation-delay: 0.3s; }
</style>

<script>
    function updateApprovalSystem(isChecked) {
        const statusLabel = document.getElementById('approvalStatus');
        const settingItem = document.querySelector('.setting-item');

        // Update status label
        statusLabel.textContent = isChecked ? "مفعل" : "معطل";

        // Visual feedback
        if (isChecked) {
            settingItem.classList.remove('border-danger');
            settingItem.classList.add('border-success');
            statusLabel.classList.remove('text-danger');
            statusLabel.classList.add('text-success');
        } else {
            settingItem.classList.remove('border-danger');
            settingItem.classList.add('border-warning');
            statusLabel.classList.remove('text-success');
            statusLabel.classList.add('text-warning');
        }
    }

    function saveSettings() {
        // Show loading state
        const saveBtn = event.target.closest('button');
        const originalText = saveBtn.innerHTML;
        saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>جاري الحفظ...';
        saveBtn.disabled = true;

        // Submit the form
        const form = document.querySelector('form');
        if (form) {
            form.submit();
        } else {
            // Fallback for demo
            setTimeout(() => {
                saveBtn.innerHTML = '<i class="fas fa-check me-1"></i>تم حفظ الإعدادات!';
                saveBtn.classList.remove('btn-success');
                saveBtn.classList.add('btn-success');

                setTimeout(() => {
                    saveBtn.innerHTML = originalText;
                    saveBtn.disabled = false;
                    saveBtn.classList.remove('btn-success');
                    saveBtn.classList.add('btn-success');
                }, 3000);
            }, 1000);
        }
    }

    function resetSettings() {
        if (confirm('هل أنت متأكد من إعادة تعيين الإعدادات إلى القيم الافتراضية؟')) {
            document.getElementById('approvalSystemSwitch').checked = true;
            updateApprovalSystem(true);
        }
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        const approvalSwitch = document.getElementById('approvalSystemSwitch');
        updateApprovalSystem(approvalSwitch.checked);
    });
</script>