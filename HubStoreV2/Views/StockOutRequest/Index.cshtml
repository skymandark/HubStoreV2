@model IEnumerable<Core.ViewModels.StockOutRequestViewModels.StockOutRequestListDto>
@{
    ViewData["Title"] = "طلبات إذن الصرف - القائمة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-solid: #1e293b;
        --secondary-solid: #64748b;
        --accent-solid: #3b82f6;
        --bg-soft: #f8fafc;
        --border-soft: #e2e8f0;
    }

    .card-elegant {
        border: 1px solid var(--border-soft);
        border-radius: 12px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        background: #fff;
    }

    .page-header-elegant {
        background-color: var(--primary-solid);
        color: white;
        padding: 30px 40px;
        border-radius: 12px;
        margin-bottom: 24px;
    }

    .dx-datagrid-headers {
        background-color: #f1f5f9 !important;
        color: var(--primary-solid) !important;
        font-weight: 700 !important;
    }

    .btn-elegant-primary {
        background-color: var(--accent-solid);
        color: white;
        border: none;
        padding: 10px 25px;
        font-weight: 600;
        transition: all 0.2s;
        border-radius: 50px;
    }

    .btn-elegant-primary:hover {
        background-color: #2563eb;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    }

    .status-badge {
        padding: 5px 12px;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
    }
    .status-draft { background: #f1f5f9; color: #475569; border: 1px solid #e2e8f0; }
    .status-approved { background: #dcfce7; color: #15803d; border: 1px solid #bbf7d0; }
    .status-rejected { background: #fee2e2; color: #b91c1c; border: 1px solid #fecaca; }
</style>

<div class="container-fluid py-4 animate__animated animate__fadeIn">
    <div class="page-header-elegant d-flex justify-content-between align-items-center">
        <div>
            <h1 class="mb-1"><i class="fas fa-file-export me-2"></i> إدارة أذون الصرف</h1>
            <p class="mb-0 opacity-75">إدارة أذون الصرف المعلقة وصرف أوامر البيع</p>
        </div>
    </div>

    <div class="accordion card-elegant overflow-hidden" id="stockOutAccordion">
        <!-- Section 1: Pending Requests -->
        <div class="accordion-item border-0">
            <h2 class="accordion-header" id="headingPending">
                <button class="accordion-button fw-bold fs-5 text-dark" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePending" aria-expanded="true">
                    <i class="fas fa-clock me-2 text-warning"></i> أذون صرف معلقة (تحت المراجعة)
                </button>
            </h2>
            <div id="collapsePending" class="accordion-collapse collapse show" data-bs-parent="#stockOutAccordion">
                <div class="accordion-body p-0">
                    <div id="pendingGrid"></div>
                </div>
            </div>
        </div>

        <!-- Section 2: Sell Orders -->
        <div class="accordion-item border-0 border-top">
            <h2 class="accordion-header" id="headingOrders">
                <button class="accordion-button collapsed fw-bold fs-5 text-dark" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOrders" aria-expanded="false">
                    <i class="fas fa-shopping-cart me-2 text-primary"></i> أوامر البيع المتاحة للصرف
                </button>
            </h2>
            <div id="collapseOrders" class="accordion-collapse collapse" data-bs-parent="#stockOutAccordion">
                <div class="accordion-body p-0">
                    <div id="sellOrdersGrid"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.5.2/bootbox.min.js"></script>
    <script>
        $(function () {
            // Pending Grid
            $("#pendingGrid").dxDataGrid({
                dataSource: DevExpress.data.AspNet.createStore({
                    key: "requestId",
                    loadUrl: "@Url.Action("ReadDx")"
                }),
                rtlEnabled: true,
                showBorders: false,
                rowAlternationEnabled: true,
                columns: [
                    { dataField: "docCode", caption: "كود الطلب" },
                    { dataField: "docDate", caption: "التاريخ", dataType: "date" },
                    { dataField: "branchName", caption: "المخزن" },
                    { dataField: "totalValue", caption: "الإجمالي", format: "#,##0.00" },
                    { dataField: "status", caption: "الحالة", cellTemplate: function(c, o) {
                        c.append(`<span class="status-badge status-draft">${o.value}</span>`);
                    }},
                    {
                        caption: "الإجراءات",
                        cellTemplate: function (container, options) {
                            var btn = $(`<button class="btn btn-sm btn-outline-primary me-2"><i class="fas fa-edit"></i> تعديل</button>`);
                            btn.on("click", function() {
                                PopupStockInForm("@Url.Action("Save")?RequestId=" + options.data.requestId);
                            });
                            container.append(btn);
                        }
                    }
                ]
            });

            // Sell Orders Grid
            $("#sellOrdersGrid").dxDataGrid({
                dataSource: DevExpress.data.AspNet.createStore({
                    key: "orderId",
                    loadUrl: "@Url.Action("ReadAllSellOrders")"
                }),
                rtlEnabled: true,
                showBorders: false,
                rowAlternationEnabled: true,
                columns: [
                    { dataField: "orderCode", caption: "رقم الأمر" },
                    { dataField: "supplierName", caption: "العميل" },
                    { dataField: "requestedDate", caption: "التاريخ", dataType: "date" },
                    { dataField: "totalQuantityBase", caption: "إجمالي الكمية" },
                    {
                        caption: "الإجراء",
                        cellTemplate: function (container, options) {
                            var btn = $(`<button class="btn btn-sm btn-primary"><i class="fas fa-arrow-right"></i> عرض للصرف</button>`);
                            btn.on("click", function() {
                                PopupStockInForm("@Url.Action("Save")?SoId=" + options.data.orderId + "&IsSellOrder=true");
                            });
                            container.append(btn);
                        }
                    }
                ]
            });
        });

        function PopupStockInForm(url) {
            $.get(url, function (data) {
                var dialog = bootbox.dialog({
                    title: "نموذج إذن الصرف",
                    message: data,
                    size: 'large',
                    buttons: {
                        cancel: { label: "إلغاء", className: 'btn-secondary' },
                        ok: {
                            label: "حفظ",
                            className: 'btn-primary',
                            callback: function () {
                                return SubmitStockInRequestForm($("#stockOutForm"));
                            }
                        }
                    }
                });
            });
        }

        function SubmitStockInRequestForm(form) {
            if (!form.valid()) return false;
            
            $.post(form.attr("action"), form.serialize(), function (res) {
                if (res.success) {
                    Swal.fire("تم!", res.message, "success");
                    $("#pendingGrid").dxDataGrid("instance").refresh();
                    bootbox.hideAll();
                } else {
                    Swal.fire("خطأ!", res.message, "error");
                }
            });
            return false;
        }
    </script>
}