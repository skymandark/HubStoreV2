@model Core.ViewModels.PurchaseOrderViewModels.PurchaseOrderRequestDto
@{
    ViewData["Title"] = "تفاصيل طلب الشراء - Enterprise View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-solid: #0f172a;
        --accent-solid: #6366f1;
        --bg-soft: #f8fafc;
        --border-soft: #e2e8f0;
    }

    .premium-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.03);
        background: #fff;
        margin-bottom: 24px;
        border: 1px solid var(--border-soft);
    }

    .detail-header-premium {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        color: white;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    }

    .info-label { color: #64748b; font-size: 0.75rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 6px; }
    .info-value { color: #1e293b; font-size: 1rem; font-weight: 600; }

    .status-badge {
        padding: 6px 16px;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .badge-draft { background: rgba(255,255,255,0.1); color: #fff; border: 1px solid rgba(255,255,255,0.2); }
    .badge-submitted { background: #e0f2fe; color: #0369a1; }
    .badge-approved { background: #dcfce7; color: #15803d; }

    .premium-table thead {
        background: #f1f5f9;
        border-bottom: 2px solid #e2e8f0;
    }

    .premium-table th {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #475569;
        padding: 16px;
    }

    .premium-table td { padding: 16px; vertical-align: middle; border-bottom: 1px solid #f1f5f9; }

    .summary-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 12px;
        font-size: 0.95rem;
    }

    .summary-total {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 2px dashed #e2e8f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>

<div class="container-fluid py-4">
    <!-- Header Area -->
    <div class="detail-header-premium d-flex justify-content-between align-items-center">
        <div>
            <div class="d-flex align-items-center gap-3 mb-2">
                <h1 class="fw-extrabold mb-0">طلب شراء #@Model.PurchaseOrderCode</h1>
                @{
                    var statusCls = "badge-draft";
                    var statusTxt = "مسودة";
                    switch(Model.Status) {
                        case "Submitted": statusCls = "badge-submitted"; statusTxt = "تحت المراجعة"; break;
                        case "Approved": statusCls = "badge-approved"; statusTxt = "معتمد"; break;
                        case "Rejected": statusCls = "badge-danger bg-danger text-white"; statusTxt = "مرفوض"; break;
                    }

// ... existing code ...

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-20 border-0 shadow-lg">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold" id="rejectModalLabel">سبب الرفض</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Reject" method="post">
                <div class="modal-body py-4">
                    <input type="hidden" name="id" value="@Model.PurchaseOrderId" />
                    <div class="mb-3">
                        <label for="reason" class="form-label fw-bold">الرجاء ذكر سبب الرفض:</label>
                        <textarea class="form-control rounded-12 border-soft" id="reason" name="reason" rows="4" required></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-light px-4 rounded-12 fw-bold" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-danger px-4 rounded-12 fw-bold">تأكيد الرفض</button>
                </div>
            </form>
        </div>
    </div>
</div>
                }
                <div class="status-badge @statusCls">
                    <i class="fas fa-circle" style="font-size: 0.5rem;"></i> @statusTxt
                </div>
            </div>
            <p class="mb-0 opacity-75 fw-medium">التاريخ: @Model.DocDate.ToString("dd MMMM yyyy")</p>
        </div>
        <div class="d-flex gap-3">
            <a href="@Url.Action("Index")" class="btn btn-outline-light px-4 rounded-12 fw-bold">العودة</a>
            
            @if (Model.Status == "Draft")
            {
                <a href="@Url.Action("Edit", new { id = Model.PurchaseOrderId })" class="btn btn-light px-4 rounded-12 fw-bold text-dark shadow-sm">تعديل</a>
                <form asp-action="SubmitForApproval" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.PurchaseOrderId" />
                    <button type="submit" class="btn btn-primary px-4 rounded-12 fw-bold shadow-sm">إرسال للموافقة</button>
                </form>
            }
            
            @if (Model.Status == "Submitted")
            {
                <form asp-action="Approve" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.PurchaseOrderId" />
                    <button type="submit" class="btn btn-success px-4 rounded-12 fw-bold shadow-sm">موافقة</button>
                </form>
                
                <button type="button" class="btn btn-danger px-4 rounded-12 fw-bold shadow-sm" data-bs-toggle="modal" data-bs-target="#rejectModal">رفض</button>
            }
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card premium-card">
                <div class="card-body p-4 p-lg-5">
                    <h5 class="fw-bold mb-4 text-slate-800">بيانات العملية</h5>
                    <div class="row g-4 mb-5">
                        <div class="col-md-4">
                            <div class="info-label">المورد</div>
                            <div class="info-value">@Model.SupplierName</div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-label">الفرع</div>
                            <div class="info-value">@Model.BranchName</div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-label">المرجع</div>
                            <div class="info-value text-slate-400">@(Model.Reference ?? "---")</div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-label">تاريخ التسليم المتوقع</div>
                            <div class="info-value">@(Model.DeliveryDate?.ToString("dd/MM/yyyy") ?? "---")</div>
                        </div>
                    </div>

                    <h5 class="fw-bold mb-4 text-slate-800">الأصناف المطلوبة</h5>
                    <div class="table-responsive rounded-12 border overflow-hidden">
                        <table class="table premium-table mb-0">
                            <thead>
                                <tr>
                                    <th>الصنف</th>
                                    <th class="text-center">الكمية</th>
                                    <th class="text-center">السعر</th>
                                    <th class="text-center">الخصم %</th>
                                    <th class="text-end">الإجمالي (شامل الضريبة)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.PurchaseOrderDetails)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-bold text-slate-900">@item.ItemName</div>
                                            <div class="small text-slate-400">Package: @(item.ItemPackageId > 0 ? "Unit" : "Default")</div>
                                        </td>
                                        <td class="text-center fw-semibold">@item.Quantity</td>
                                        <td class="text-center">@item.Price.ToString("N2")</td>
                                        <td class="text-center text-danger">-@item.MainDiscountPercent%</td>
                                        <td class="text-end fw-bold text-indigo-600">@item.NetValue.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card premium-card border-indigo-100" style="background: #fdfdff;">
                <div class="card-body p-4 p-lg-5">
                    <h5 class="fw-extrabold mb-4 text-indigo-900">ملخص مالي</h5>
                    
                    <div class="summary-item">
                        <span class="text-slate-500">إجمالي الأصناف:</span>
                        <span class="fw-bold">@Model.PurchaseOrderDetails.Count</span>
                    </div>
                    <div class="summary-item">
                        <span class="text-slate-500">القيمة الإجمالية:</span>
                        <span class="fw-bold">@Model.TotalValue.ToString("N2")</span>
                    </div>
                    <div class="summary-item">
                        <span class="text-slate-500">الخصومات:</span>
                        <span class="fw-bold text-danger">(@Model.PurchaseOrderDetails.Sum(x => x.MainDiscountValue).ToString("N2"))</span>
                    </div>
                    <div class="summary-item">
                        <span class="text-slate-500">ضريبة القيمة المضافة:</span>
                        <span class="fw-bold">@Model.PurchaseOrderDetails.Sum(x => x.VatValue).ToString("N2")</span>
                    </div>

                    <div class="summary-total">
                        <span class="fs-5 fw-bold text-slate-700">الصافي النهائي</span>
                        <div class="text-end">
                            <div class="fs-2 fw-extrabold text-indigo-600">@Model.PurchaseOrderDetails.Sum(x => x.NetValue).ToString("N2")</div>
                            <div class="small text-slate-400 fw-medium">ريال سعودي</div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Remarks))
                    {
                        <div class="mt-5 p-3 bg-slate-50 rounded-12 border">
                            <div class="info-label mb-2">ملاحظات</div>
                            <p class="small text-slate-600 mb-0">@Model.Remarks</p>
                        </div>
                    }

                    <button class="btn btn-dark w-100 py-3 rounded-12 fw-bold mt-5 shadow-lg" onclick="window.print()">
                        <i class="fas fa-print me-2"></i> طباعة كشف الطلب
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
