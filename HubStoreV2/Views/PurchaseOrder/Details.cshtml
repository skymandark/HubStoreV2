@model Core.ViewModels.PurchaseOrderViewModels.PurchaseOrderRequestDto
@{
    ViewData["Title"] = "تفاصيل طلب الشراء - Enterprise View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .premium-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.04);
        background: #fff;
        margin-bottom: 24px;
    }

    .detail-header-gradient {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        color: white;
        padding: 40px;
        border-radius: 20px 20px 0 0;
        margin-bottom: -20px;
    }

    .info-label { color: #64748b; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 4px; }
    .info-value { color: #1e293b; font-size: 1.05rem; font-weight: 700; }

    .status-banner {
        padding: 8px 16px;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .banner-draft { background: #f1f5f9; color: #475569; }
    .banner-submitted { background: #e0f2fe; color: #0369a1; }
    .banner-approved { background: #dcfce7; color: #15803d; }

    .item-grid-header { background: #f8fafc; border-bottom: 2px solid #e2e8f0; }
    .footer-summary { background: #f8fafc; border-radius: 15px; padding: 25px; border: 1px solid #e2e8f0; }
</style>

<div class="container-fluid py-4 animate__animated animate__fadeIn">
    <!-- Header Area -->
    <div class="detail-header-gradient d-flex justify-content-between align-items-center">
        <div>
            <div class="d-flex align-items-center gap-3 mb-2">
                <h1 class="fw-bold mb-0">طلب شراء #@Model.PurchaseOrderCode</h1>
                @{
                    var statusCls = "banner-draft";
                    var statusTxt = "مسودة";
                    switch(Model.Status) {
                        case "Submitted": statusCls = "banner-submitted"; statusTxt = "تحت المراجعة"; break;
                        case "Approved": statusCls = "banner-approved"; statusTxt = "معتمد"; break;
                    }
                }
                <div class="status-banner @statusCls">
                    <i class="fas fa-circle fs-xs"></i> @statusTxt
                </div>
            </div>
            <p class="mb-0 opacity-75">تاريخ الطلب: @Model.DocDate.ToString("dd MMMM yyyy")</p>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Index")" class="btn btn-outline-light px-4 rounded-pill">العودة للقائمة</a>
            <a href="@Url.Action("Edit", new { id = Model.PurchaseOrderId })" class="btn btn-primary px-4 rounded-pill shadow">تعديل الطلب</a>
        </div>
    </div>

    <div class="row g-4 mt-1">
        <!-- Main Info Cards -->
        <div class="col-lg-8">
            <div class="card premium-card">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4 text-dark border-bottom pb-2">بيانات المورد والجهة</h5>
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="info-label">المورد</div>
                            <div class="info-value">@Model.SupplierName</div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-label">رقم الفرع</div>
                            <div class="info-value">@Model.BranchName</div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-label">المرجع</div>
                            <div class="info-value">@(Model.Reference ?? "---")</div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-label">مندوب المورد</div>
                            <div class="info-value">@(Model.SupplierDelegate ?? "---")</div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-label">تاريخ التسليم</div>
                            <div class="info-value">@(Model.DeliveryDate?.ToString("dd/MM/yyyy") ?? "---")</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Items Table -->
            <div class="card premium-card overflow-hidden">
                <div class="card-header bg-white p-4 border-0">
                    <h5 class="fw-bold mb-0">تفاصيل الأصناف</h5>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="item-grid-header">
                            <tr>
                                <th class="ps-4">الصنف</th>
                                <th class="text-center">الكمية</th>
                                <th class="text-center">السعر</th>
                                <th class="text-center">خصم %</th>
                                <th class="text-end pe-4">الإجمالي</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PurchaseOrderDetails)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-primary">@item.ItemName</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-center">@item.Price.ToString("N2")</td>
                                    <td class="text-center">@item.MainDiscountPercent%</td>
                                    <td class="text-end pe-4 fw-bold">@item.NetValue.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Sidebar Summary -->
        <div class="col-lg-4">
            <div class="card premium-card">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4 text-dark">ملخص القيم</h5>
                    @{
                        var totalDiscount = Model.PurchaseOrderDetails?.Sum(d => d.MainDiscountValue) ?? 0;
                        var totalVat = Model.PurchaseOrderDetails?.Sum(d => d.VatValue) ?? 0;
                        var netValue = Model.PurchaseOrderDetails?.Sum(d => d.NetValue) ?? 0;
                    }
                    <div class="footer-summary">
                        <div class="d-flex justify-content-between mb-3 text-muted">
                            <span>إجمالي القيمة:</span>
                            <span>@Model.TotalValue.ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3 text-muted">
                            <span>إجمالي الخصم:</span>
                            <span>@totalDiscount.ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3 text-muted">
                            <span>الضريبة (VAT):</span>
                            <span>@totalVat.ToString("N2")</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="fw-bold fs-5">الإجمالي النهائي:</span>
                            <span class="fw-bold fs-3 text-primary">@netValue.ToString("N2")</span>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Remarks))
                    {
                        <div class="mt-4 pt-3 border-top">
                            <div class="info-label">ملاحظات</div>
                            <p class="small text-muted mb-0">@Model.Remarks</p>
                        </div>
                    }

                    <div class="mt-4 d-grid gap-2">
                        <button class="btn btn-success py-3 fw-bold rounded-15" onclick="window.print()">
                            <i class="fas fa-print me-2"></i>طباعة الطلب
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
