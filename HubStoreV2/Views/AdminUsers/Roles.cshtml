@model Core.ViewModels.Admin.AdminUserRolesVm
@{
    ViewData["Title"] = "أدوار المستخدم";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">أدوار المستخدم: @Model.UserName</h3>
        <a class="btn btn-secondary" href="@Url.Action("Index")">رجوع</a>
    </div>

    <div class="card">
        <div class="card-body">
            <form method="post" asp-action="Roles">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="UserName" />

                <div class="row">
                    <div class="col-md-6">
                        @for (int i = 0; i < Model.Roles.Count; i++)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Roles[i].IsAssigned" />
                                <input type="hidden" asp-for="Roles[i].Name" />
                                <label class="form-check-label">@Model.Roles[i].Name</label>
                            </div>
                        }
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">حفظ</button>
                </div>
            </form>
        </div>
    </div>
</div>
