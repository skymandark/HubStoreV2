        updateItemInfo(lineNumber);
        
        // Clear search
        clearSearch();
        
        // Scroll to the row
        targetRow.scrollIntoView({ behavior: 'smooth', block: 'center' });
        
        // Focus on quantity
        targetRow.querySelector('.quantity-input').focus();
        
        updateItemsCount();
