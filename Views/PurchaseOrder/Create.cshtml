    function duplicateLineItem(lineNumber) {
        const sourceRow = document.querySelector(`[data-line-number="${lineNumber}"]`);
        if (!sourceRow) return;
        
        const container = document.getElementById('lineItemsContainer');
        const newLineNumber = container.children.length;
        
        const newRow = sourceRow.cloneNode(true);
        newRow.dataset.lineNumber = newLineNumber;
        
        // Update all input names and IDs
        const inputs = newRow.querySelectorAll('input, select');
        inputs.forEach(input => {
            const name = input.name.replace(/\[\d+\]/, `[${newLineNumber}]`);
            input.name = name;
            
            // Clear values for quantity and other fields
            if (input.classList.contains('quantity-input') || 
                input.classList.contains('discount-input') || 
                input.classList.contains('added-discount-input') || 
                input.classList.contains('vat-input')) {
                input.value = '';
            }
            
            // Update onchange handlers
            if (input.onchange) {
                input.setAttribute('onchange', input.getAttribute('onchange').replace(/\d+/, newLineNumber));
            }
        });
        
        // Update button onclick handlers
        const buttons = newRow.querySelectorAll('button[onclick]');
        buttons.forEach(button => {
            const onclick = button.getAttribute('onclick').replace(/\d+/, newLineNumber);
            button.setAttribute('onclick', onclick);
        });
        
        // Update item code span
        const itemCodeSpan = newRow.querySelector(`[id^="itemCode_"]`);
        if (itemCodeSpan) {
            itemCodeSpan.id = `itemCode_${newLineNumber}`;
        }
        
        container.appendChild(newRow);
        updateItemsCount();
        updateRowNumbers();
        
        // Scroll to new row
        newRow.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
    
