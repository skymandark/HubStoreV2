    // Advanced search and filtering functions
    function handleSearchKeyup(event) {
        if (event.key === 'Enter') {
            event.preventDefault();
            searchItems();
        } else if (event.target.value.length >= 2) {
            // Auto-search after typing 2 characters
            setTimeout(() => searchItems(), 300);
        }
    }
    
    function filterItems() {
        const category = document.getElementById('categoryFilter').value;
        const priceRange = document.getElementById('priceRange').value;
        const searchTerm = document.getElementById('itemSearch').value.toLowerCase();
        
        let filteredItems = allItems;
        
        // Filter by branch
        const selectedBranchId = document.getElementById('branchId').value;
        if (selectedBranchId) {
            filteredItems = filteredItems.filter(item => item.branchId == selectedBranchId);
        }
        
        // Filter by category
        if (category) {
            filteredItems = filteredItems.filter(item => item.categoryId == category);
        }
        
        // Filter by price range
        if (priceRange) {
            const [min, max] = priceRange.split('-').map(p => p.replace('+', ''));
            filteredItems = filteredItems.filter(item => {
                const price = parseFloat(item.price) || 0;
                if (max) {
                    return price >= parseFloat(min) && price <= parseFloat(max);
                } else {
                    return price >= parseFloat(min);
                }
            });
        }
        
        // Filter by search term
        if (searchTerm) {
            filteredItems = filteredItems.filter(item => 
                item.itemId.toString().includes(searchTerm) ||
                (item.code && item.code.toLowerCase().includes(searchTerm)) ||
                (item.nameArab && item.nameArab.toLowerCase().includes(searchTerm))
            );
        }
        
        displaySearchResults(filteredItems);
    }
    
    function displaySearchResults(items) {
        const resultsSection = document.getElementById('searchResultsSection');
        const resultsBody = document.getElementById('searchResultsBody');
        const resultsInfo = document.getElementById('searchResultsInfo');
        
        resultsBody.innerHTML = '';
        
        if (items.length === 0) {
            resultsInfo.textContent = 'لم يتم العثور على نتائج';
            resultsBody.innerHTML = '<tr><td colspan="7" class="text-center text-muted">لا توجد أصناف مطابقة للبحث</td></tr>';
        } else {
            resultsInfo.textContent = `تم العثور على ${items.length} نتيجة`;
            
            items.forEach((item, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="text-center">${index + 1}</td>
                    <td><strong>${item.code || '-'}</strong></td>
                    <td>${item.nameArab || '-'}</td>
                    <td class="text-center">${item.price ? parseFloat(item.price).toFixed(2) : '-'}</td>
                    <td class="text-center">
                        <span class="badge bg-success">${item.stock || 0}</span>
                    </td>
                    <td><small class="text-muted">${item.description || '-'}</small></td>
                    <td class="text-center">
                        <button type="button" class="btn btn-success btn-sm" 
                                onclick="selectItemFromSearch(${item.itemId}, '${item.nameArab || ''}', '${item.code || ''}', ${item.price || 0})">
                            <i class="fas fa-plus"></i> إضافة
