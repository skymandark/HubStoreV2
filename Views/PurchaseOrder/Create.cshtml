            if (!itemSelect.value) {
                isValid = false;
                errorMessage += `\\n- الصنف في الصف ${index + 1} مطلوب`;
            }
            
            if (!quantityInput.value || parseFloat(quantityInput.value) <= 0) {
                isValid = false;
                errorMessage += `\\n- الكمية في الصف ${index + 1} يجب أن تكون أكبر من صفر`;
            }
            
            if (!priceInput.value || parseFloat(priceInput.value) <= 0) {
                isValid = false;
                errorMessage += `\\n- السعر في الصف ${index + 1} يجب أن يكون أكبر من صفر`;
            }
        });
        
        // Validate main form fields
        const supplierId = document.getElementById('supplierId').value;
        const branchId = document.getElementById('branchId').value;
        const docDate = document.getElementById('docDate').value;
        const receiptType = document.getElementById('receiptType').value;
        
        if (!receiptType) {
            isValid = false;
            errorMessage += '\\n- يجب اختيار نوع الإيصال';
        }
        
        if (!docDate) {
            isValid = false;
            errorMessage += '\\n- تاريخ المستند مطلوب';
        }
        
        if (!supplierId) {
            isValid = false;
            errorMessage += '\\n- يجب اختيار المورد';
        }
        
        if (!branchId) {
            isValid = false;
            errorMessage += '\\n- يجب اختيار الفرع';
        }
        
        // Validate dates
        const deliveryDate = document.getElementById('deliveryDate').value;
        const dueDate = document.getElementById('dueDate').value;
        
        if (deliveryDate && new Date(deliveryDate) < new Date(docDate)) {
            isValid = false;
            errorMessage += '\\n- تاريخ التسليم يجب أن يكون بعد تاريخ المستند';
        }
        
        if (dueDate && new Date(dueDate) < new Date(docDate)) {
            isValid = false;
            errorMessage += '\\n- تاريخ الاستحقاق يجب أن يكون بعد تاريخ المستند';
        }
        
        // Validate payment period
        const paymentPeriodDays = document.getElementById('paymentPeriodDays').value;
        if (paymentPeriodDays && (parseInt(paymentPeriodDays) < 0 || parseInt(paymentPeriodDays) > 365)) {
            isValid = false;
            errorMessage += '\\n- مدة السداد يجب أن تكون بين 0 و 365 يوم';
        }
        
        if (!isValid) {
            e.preventDefault();
            showValidationAlert(errorMessage);
        }
    });
    
