    // Calculate summary totals
    function calculateSummary() {
        let totalBefore = 0;
        let totalDiscount = 0;
        let totalTax = 0;
        let totalNet = 0;

        document.querySelectorAll('#lineItemsContainer tr').forEach(row => {
            const totalValue = parseFloat(row.querySelector('.total-value-input').value) || 0;
            const discountValue = parseFloat(row.querySelector('.discount-input').value) || 0;
            const vat = parseFloat(row.querySelector('.vat-input').value) || 0;
            const netValue = parseFloat(row.querySelector('.net-value-input').value) || 0;

            totalBefore += totalValue;
            totalDiscount += (totalValue * discountValue) / 100;
            totalTax += vat;
            totalNet += netValue;
        });

        document.getElementById('totalBeforeDiscount').textContent = totalBefore.toFixed(2);
        document.getElementById('totalDiscount').textContent = totalDiscount.toFixed(2);
        document.getElementById('totalTax').textContent = totalTax.toFixed(2);
        document.getElementById('totalNet').textContent = totalNet.toFixed(2);
    }

