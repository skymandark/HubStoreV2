    function selectItemFromSearch(itemId, itemName, itemCode, itemPrice) {
        // Find first empty row or add new one
        const container = document.getElementById('lineItemsContainer');
        let targetRow = null;
        
        // Look for empty row
        const rows = container.querySelectorAll('.line-item-row');
        for (let row of rows) {
            const select = row.querySelector('.item-select');
            if (!select.value) {
                targetRow = row;
                break;
            }
        }
        
        // If no empty row, add new one
        if (!targetRow) {
            addNewLineItem();
            targetRow = container.lastElementChild;
        }
        
        const lineNumber = targetRow.dataset.lineNumber || container.children.length - 1;
        
        // Set item in dropdown
        const select = targetRow.querySelector('.item-select');
        select.value = itemId;
        
        // Set price if available
        if (itemPrice > 0) {
            const priceInput = targetRow.querySelector('.price-input');
            priceInput.value = itemPrice;
            calculateLineTotal(lineNumber);
