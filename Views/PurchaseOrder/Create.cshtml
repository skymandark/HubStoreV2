        const selectedOption = select.options[select.selectedIndex];
        const itemCode = selectedOption.getAttribute('data-code');
        const itemPrice = selectedOption.getAttribute('data-price');
        
        const codeSpan = document.getElementById(`itemCode_${lineNumber}`);
        if (codeSpan) {
            codeSpan.textContent = `كود: ${itemCode || '-'}`;
        }
        
        // Auto-fill price if available
        if (itemPrice && itemPrice !== '0') {
            const priceInput = row.querySelector('.price-input');
            if (priceInput && !priceInput.value) {
                priceInput.value = itemPrice;
                calculateLineTotal(lineNumber);
            }
        }
    }
    
    function calculateLineTotal(lineNumber) {
        const row = document.querySelector(`[data-line-number="${lineNumber}"]`);
        if (!row) return;
        
        const quantity = parseFloat(row.querySelector('.quantity-input').value) || 0;
        const price = parseFloat(row.querySelector('.price-input').value) || 0;
        const mainDiscount = parseFloat(row.querySelector('.discount-input').value) || 0;
        const addedDiscount = parseFloat(row.querySelector('.added-discount-input').value) || 0;
        const vat = parseFloat(row.querySelector('.vat-input').value) || 0;
        
        // Calculate total before discounts
        let totalValue = quantity * price;
        
        // Apply main discount
        if (mainDiscount > 0) {
            totalValue -= totalValue * (mainDiscount / 100);
        }
        
        // Apply added discount
        if (addedDiscount > 0) {
            totalValue -= totalValue * (addedDiscount / 100);
        }
        
        // Add VAT
        let netValue = totalValue + vat;
        
        // Update fields
        row.querySelector('.total-value-input').value = totalValue.toFixed(2);
        row.querySelector('.net-value-input').value = netValue.toFixed(2);
        
        calculateSummary();
    }
    
    function calculateSummary() {
        const rows = document.querySelectorAll('.line-item-row');
        let totalBeforeDiscount = 0;
        let totalDiscount = 0;
        let totalTax = 0;
        let totalNet = 0;
        
        rows.forEach(row => {
            const quantity = parseFloat(row.querySelector('.quantity-input').value) || 0;
            const price = parseFloat(row.querySelector('.price-input').value) || 0;
            const mainDiscount = parseFloat(row.querySelector('.discount-input').value) || 0;
            const addedDiscount = parseFloat(row.querySelector('.added-discount-input').value) || 0;
            const vat = parseFloat(row.querySelector('.vat-input').value) || 0;
            
            const lineTotal = quantity * price;
            totalBeforeDiscount += lineTotal;
            
            const discountAmount = lineTotal * ((mainDiscount + addedDiscount) / 100);
            totalDiscount += discountAmount;
            
            totalTax += vat;
            
            const netValue = parseFloat(row.querySelector('.net-value-input').value) || 0;
            totalNet += netValue;
        });
        
        document.getElementById('totalBeforeDiscount').textContent = totalBeforeDiscount.toFixed(2);
        document.getElementById('totalDiscount').textContent = totalDiscount.toFixed(2);
        document.getElementById('totalTax').textContent = totalTax.toFixed(2);
        document.getElementById('totalNet').textContent = totalNet.toFixed(2);
    }
    
